<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Multi_Saves_Backup_Tool.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Multi_Saves_Backup_Tool.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    <ScrollViewer>
        <StackPanel Spacing="10" Margin="20">
            <TextBlock Text="Настройки резервного копирования" Classes="h2"/>
            
            <!-- Основные настройки -->
            <StackPanel Margin="0,10">
                <TextBlock Text="Папка для резервных копий:" Margin="0,0,0,5"/>
                <Grid ColumnDefinitions="*, Auto">
                    <TextBox Text="{Binding Settings.BackupSettings.BackupRootFolder}"
                             Margin="0,0,10,0"/>
                    <Button Grid.Column="1" Content="Обзор" 
                            Command="{Binding BrowseBackupFolderCommand}"/>
                </Grid>
                
                <TextBlock Text="Интервал сканирования (минуты):" Margin="0,10,0,5"/>
                <NumericUpDown Value="{Binding Settings.BackupSettings.ScanIntervalMinutes}"
                              Minimum="1" Maximum="1440"/>
                
                <TextBlock Text="Максимум параллельных операций:" Margin="0,10,0,5"/>
                <NumericUpDown Value="{Binding Settings.BackupSettings.MaxParallelBackups}"
                              Minimum="1" Maximum="10"/>
                
                <TextBlock Text="Уровень сжатия:" Margin="0,10,0,5"/>
                <ComboBox SelectedItem="{Binding Settings.BackupSettings.CompressionLevel}"
                         HorizontalAlignment="Stretch">
                    <ComboBoxItem Content="Быстрый">Fastest</ComboBoxItem>
                    <ComboBoxItem Content="Оптимальный">Optimal</ComboBoxItem>
                    <ComboBoxItem Content="Максимальный">SmallestSize</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            
            <!-- Логирование -->
            <StackPanel Margin="0,10">
                <TextBlock Text="Настройки логирования" Classes="h3"/>
                <CheckBox Content="Включить логирование" 
                          IsChecked="{Binding Settings.BackupSettings.EnableLogging}"/>
                
                <TextBlock Text="Путь к файлу лога:" Margin="0,10,0,5"
                          IsEnabled="{Binding Settings.BackupSettings.EnableLogging}"/>
                <Grid ColumnDefinitions="*, Auto">
                    <TextBox Text="{Binding Settings.BackupSettings.LogPath}"
                             IsEnabled="{Binding Settings.BackupSettings.EnableLogging}"
                             Margin="0,0,10,0"/>
                    <Button Grid.Column="1" Content="Обзор"
                            Command="{Binding BrowseLogFileCommand}"
                            IsEnabled="{Binding Settings.BackupSettings.EnableLogging}"/>
                </Grid>
            </StackPanel>
            
            <!-- Уведомления -->
            <StackPanel Margin="0,10">
                <TextBlock Text="Настройки уведомлений" Classes="h3"/>
                <CheckBox Content="Включить уведомления"
                          IsChecked="{Binding Settings.BackupSettings.NotificationSettings.EnableNotifications}"/>
                
                <StackPanel Margin="20,5" 
                           IsEnabled="{Binding Settings.BackupSettings.NotificationSettings.EnableNotifications}">
                    <CheckBox Content="Показывать уведомления об ошибках"
                              IsChecked="{Binding Settings.BackupSettings.NotificationSettings.ShowErrorNotifications}"/>
                    <CheckBox Content="Показывать уведомления об успешных операциях"
                              IsChecked="{Binding Settings.BackupSettings.NotificationSettings.ShowSuccessNotifications}"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,20,0,0"
                        HorizontalAlignment="Right">
                <Button Content="Сохранить" Command="{Binding SaveCurrentSettingsCommand}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
